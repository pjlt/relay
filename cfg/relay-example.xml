<?xml version="1.0" encoding="UTF-8" ?>
<relay>

    <log>
        <path>log</path>
        <prefix>relay</prefix>
        <level>info</level>
        <maxsize>10</maxsize>
        <maxage>30</maxage>
    </log>

    <net>
        <ip>0.0.0.0</ip>
        <port>19000</port>
    </net>

    <mgr>
        <enable>false</enable>
        <ip>0.0.0.0</ip>
        <port>19001</port>
        <mode>release</mode>
    </mgr>

    <auth>
		<use_db>false</use_db>
		<db>user.db</db>
		<users>
			<user>
				<username>user1</username>      <!-- No more than 16 bytes!!! -->
				<password>password1</password>  <!-- No more than 16 bytes!!! -->
			</user>
			<user>
				<username>user2</username>
				<password>password2</password>
			</user>
		</users>
    </auth>

</relay>